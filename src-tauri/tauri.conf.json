{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Focus",
  "version": "0.1.0",
  "identifier": "com.cheng-yen.focus",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Focus",
        "fullscreen": true,
        "maximized": true,
        "decorations": false,
        "resizable": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' https://images.unsplash.com asset: http://asset.localhost; connect-src 'self' https://api.unsplash.com",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPCACHE/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}